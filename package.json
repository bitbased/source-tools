{
  "name": "source-tools",
  "displayName": "Source Tools",
  "description": "Track code changes against any git reference or snapshots (not just the current branch) with visual indicators that work alongside built-in git features",
  "version": "0.2.4",
  "publisher": "bitbased",
  "author": "Brant Wedel (https://bitbased.net)",
  "type": "module",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/bitbased/source-tools"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sourceTools.gitTrackingOptions",
        "title": "Source Tools: Git Tracking",
        "icon": "$(sti-tracking-base-alt)"
      },
      {
        "command": "sourceTools.openTrackedFiles",
        "title": "SourceTools: Open Tracked Files",
        "icon": "$(go-to-editing-session)"
      },
      {
        "command": "sourceTools.openChangedFiles",
        "title": "SourceTools: Open Changed Files",
        "icon": "$(go-to-editing-session)"
      },
      {
        "command": "sourceTools.diffFileSnapshot",
        "title": "SourceTools: Diff File Snapshot",
        "icon": "$(sti-snapshot-compare)"
      },
      {
        "command": "sourceTools.snapshotTrackingOptions",
        "title": "SourceTools: Snapshot Tracking",
        "icon": "$(sti-snapshot-options-alt)"
      },
      {
        "command": "sourceTools.diffTrackedFile",
        "title": "SourceTools: Diff Tracked File",
        "icon": "$(sti-tracking-compare)"
      },
      {
        "command": "sourceTools.toggleTreeColor",
        "title": "SourceTools: Toggle File Color",
        "icon": "$(symbol-color)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sourceTools.gitTrackingOptions",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "sourceTools.snapshotTrackingOptions",
          "when": "editorIsOpen && resourceScheme != 'sourcetools-diff' && resourceScheme != 'git' && resourceScheme != 'git-index' && !resourcePreview && !isInDiffEditor && !resourceDiffEditorPreview",
          "alt": "sourceTools.gitTrackingOptions",
          "arguments": [
            "${activeEditor}"
          ],
          "group": "navigation@1"
        },
        {
          "command": "sourceTools.diffFileSnapshot",
          "when": "sourceTools.hasActiveSnapshot && editorIsOpen && resourceScheme != 'sourcetools-diff' && resourceScheme != 'git' && resourceScheme != 'git-index' && !resourcePreview && !isInDiffEditor && !resourceDiffEditorPreview",
          "arguments": [
            "${activeEditor}"
          ],
          "group": "navigation@2"
        },
        {
          "command": "sourceTools.diffTrackedFile",
          "when": "!sourceTools.hasActiveSnapshot && editorIsOpen && resourceScheme != 'sourcetools-diff' && resourceScheme != 'git' && resourceScheme != 'git-index' && !resourcePreview && !isInDiffEditor && !resourceDiffEditorPreview",
          "arguments": [
            "${activeEditor}"
          ],
          "group": "navigation@3"
        }
      ],
      "commandPalette": [
        {
          "command": "sourceTools.toggleTreeColor",
          "when": "false"
        },
        {
          "command": "sourceTools.diffFileSnapshot",
          "when": "false"
        }
      ]
    },
    "icons": {
      "sti-tracking-options": {
        "description": "Source Tools tracking options icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf101"
        }
      },
      "sti-tracking-compare": {
        "description": "Source Tools tracking compare icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf102"
        }
      },
      "sti-tracking-base": {
        "description": "Source Tools tracking base icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf103"
        }
      },
      "sti-tracking-base-alt": {
        "description": "Source Tools tracking base alt icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf104"
        }
      },
      "sti-snapshot-options": {
        "description": "Source Tools snapshot options icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf105"
        }
      },
      "sti-snapshot-options-alt": {
        "description": "Source Tools snapshot options alt icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf106"
        }
      },
      "sti-snapshot-compare": {
        "description": "Source Tools snapshot compare icon",
        "default": {
          "fontPath": "./resources/source-tools-icons.woff",
          "fontCharacter": "\\uf107"
        }
      }
    }
  },
  "scripts": {
    "compile-assets": "node scripts/compile-assets-icons.js",
    "compile": "tsc -p . --skipLibCheck",
    "watch": "tsc -w -p .",
    "install": "npm run compile && vsce package --allow-missing-repository",
    "package": "npm run compile-assets && npm run compile && vsce package --allow-missing-repository",
    "package-install": "npm run package && code --force --install-extension source-tools-$(node -e \"console.log(require('./package.json').version)\").vsix"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.50.0",
    "fantasticon": "^3.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@types/diff": "^7.0.2",
    "diff": "^7.0.0"
  }
}